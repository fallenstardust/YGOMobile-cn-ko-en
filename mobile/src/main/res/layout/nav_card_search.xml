<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nav_right"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/AppTheme.PopupOverlay.Dark"
    tools:showIn="@layout/fragment_search">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_ot"
                        style="@style/itemSpinnerStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Switch
                        android:id="@+id/sw_genesys_mode"
                        style="@style/CustomSwitch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/switch_banlist_mode"
                        android:thumbTint="@color/switch_thumb_color_selector"
                        android:trackTint="@color/switch_track_color_selector" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/label_width_small"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_limit_list"
                        style="@style/itemSpinnerStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_genesys_limit_list"
                        style="@style/itemSpinnerStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_limit"
                        style="@style/itemSpinnerStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_genesys_limit"
                        style="@style/itemSpinnerStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/label_width_small"
                    android:orientation="horizontal">

                    <cn.garymb.ygomobile.ui.widget.SearchableSpinner
                        android:id="@+id/sp_setcode"
                        style="@style/itemSpinnerStyle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/label_width_small"
                        android:layout_weight="1"
                        app:searchTitle="@string/label_set" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_category"
                        style="@style/itemSpinnerStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_close_black_24dp"
                        android:text="卡片种类 ?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="6"
                        android:rowCount="1">
                        <Button
                            android:id="@+id/btn_type_monster"
                            style="@style/CardFilterBtn"
                            android:text="怪兽" />

                        <Button
                            android:id="@+id/btn_type_spell"
                            style="@style/CardFilterBtn"
                            android:text="魔法" />

                        <Button
                            android:id="@+id/btn_type_trap"
                            style="@style/CardFilterBtn"
                            android:text="陷阱" />
                    </GridLayout>
                </LinearLayout>
                <!-- 魔陷种类筛选 -->
                <LinearLayout
                    android:id="@+id/ll_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_close_black_24dp"
                        android:text="魔陷种类 ?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="1">

                        <Button
                            android:id="@+id/btn_icon_equip"
                            style="@style/CardFilterBtn"
                            android:text="装备" />

                        <Button
                            android:id="@+id/btn_icon_field"
                            style="@style/CardFilterBtn"
                            android:text="场地" />

                        <Button
                            android:id="@+id/btn_icon_quickPlay"
                            style="@style/CardFilterBtn"
                            android:text="速攻" />

                        <Button
                            android:id="@+id/btn_icon_ritual"
                            style="@style/CardFilterBtn"
                            android:text="仪式" />

                        <Button
                            android:id="@+id/btn_icon_continuous"
                            style="@style/CardFilterBtn"
                            android:text="永续" />

                        <Button
                            android:id="@+id/btn_icon_counter"
                            style="@style/CardFilterBtn"
                            android:text="反击" />

                        <Button
                            android:id="@+id/btn_icon_normal"
                            style="@style/CardFilterBtn"
                            android:text="通常" />
                    </GridLayout>
                </LinearLayout>
                <!-- 属性筛选 -->
                <LinearLayout
                    android:id="@+id/ll_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_close_black_24dp"
                        android:text="属性 ?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="1"
                        android:spacing="8dp">

                        <Button
                            android:id="@+id/btn_attr_dark"
                            style="@style/CardFilterBtn"
                            android:text="暗" />

                        <Button
                            android:id="@+id/btn_attr_light"
                            style="@style/CardFilterBtn"
                            android:text="光" />

                        <Button
                            android:id="@+id/btn_attr_earth"
                            style="@style/CardFilterBtn"
                            android:text="地" />

                        <Button
                            android:id="@+id/btn_attr_water"
                            style="@style/CardFilterBtn"
                            android:text="水" />

                        <Button
                            android:id="@+id/btn_attr_fire"
                            style="@style/CardFilterBtn"
                            android:text="炎" />

                        <Button
                            android:id="@+id/btn_attr_wind"
                            style="@style/CardFilterBtn"
                            android:text="风" />

                        <Button
                            android:id="@+id/btn_attr_divine"
                            style="@style/CardFilterBtn"
                            android:text="神" />
                    </GridLayout>
                </LinearLayout>
                <!-- 种族筛选 -->
                <LinearLayout
                    android:id="@+id/ll_race"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_close_black_24dp"
                        android:text="种族 ?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="5">

                        <Button
                            android:id="@+id/btn_race_spellcaster"
                            style="@style/CardFilterBtn"
                            android:text="魔法师" />

                        <Button
                            android:id="@+id/btn_race_dragon"
                            style="@style/CardFilterBtn"
                            android:text="龙" />

                        <Button
                            android:id="@+id/btn_race_zombie"
                            style="@style/CardFilterBtn"
                            android:text="不死" />

                        <Button
                            android:id="@+id/btn_race_warrior"
                            style="@style/CardFilterBtn"
                            android:text="战士" />

                        <Button
                            android:id="@+id/btn_race_beastWarrior"
                            style="@style/CardFilterBtn"
                            android:text="兽战士" />

                        <Button
                            android:id="@+id/btn_race_beast"
                            style="@style/CardFilterBtn"
                            android:text="兽" />

                        <Button
                            android:id="@+id/btn_race_wingedBeast"
                            style="@style/CardFilterBtn"
                            android:text="鸟兽" />

                        <Button
                            android:id="@+id/btn_race_fiend"
                            style="@style/CardFilterBtn"
                            android:text="恶魔" />

                        <Button
                            android:id="@+id/btn_race_fairy"
                            style="@style/CardFilterBtn"
                            android:text="天使" />

                        <Button
                            android:id="@+id/btn_race_insect"
                            style="@style/CardFilterBtn"
                            android:text="昆虫" />

                        <Button
                            android:id="@+id/btn_race_dinosaur"
                            style="@style/CardFilterBtn"
                            android:text="恐龙" />

                        <Button
                            android:id="@+id/btn_race_reptile"
                            style="@style/CardFilterBtn"
                            android:text="爬虫类" />

                        <Button
                            android:id="@+id/btn_race_fish"
                            style="@style/CardFilterBtn"
                            android:text="鱼" />

                        <Button
                            android:id="@+id/btn_race_seaSerpent"
                            style="@style/CardFilterBtn"
                            android:text="海龙" />

                        <Button
                            android:id="@+id/btn_race_aqua"
                            style="@style/CardFilterBtn"
                            android:text="水" />

                        <Button
                            android:id="@+id/btn_race_pyro"
                            style="@style/CardFilterBtn"
                            android:text="炎" />

                        <Button
                            android:id="@+id/btn_race_thunder"
                            style="@style/CardFilterBtn"
                            android:text="雷" />

                        <Button
                            android:id="@+id/btn_race_rock"
                            style="@style/CardFilterBtn"
                            android:text="岩石" />

                        <Button
                            android:id="@+id/btn_race_plant"
                            style="@style/CardFilterBtn"
                            android:text="植物" />

                        <Button
                            android:id="@+id/btn_race_machine"
                            style="@style/CardFilterBtn"
                            android:text="机械" />

                        <Button
                            android:id="@+id/btn_race_psychic"
                            style="@style/CardFilterBtn"
                            android:text="念动力" />

                        <Button
                            android:id="@+id/btn_race_wyrm"
                            style="@style/CardFilterBtn"
                            android:text="幻龙" />

                        <Button
                            android:id="@+id/btn_race_cyberse"
                            style="@style/CardFilterBtn"
                            android:text="电子界" />

                        <Button
                            android:id="@+id/btn_race_illusion"
                            style="@style/CardFilterBtn"
                            android:text="幻想魔" />

                        <Button
                            android:id="@+id/btn_race_divineBeast"
                            style="@style/CardFilterBtn"
                            android:text="幻神兽" />

                        <Button
                            android:id="@+id/btn_race_creatorGod"
                            style="@style/CardFilterBtn"
                            android:text="创造神" />
                    </GridLayout>

                </LinearLayout>
                <!-- 怪兽类型筛选（带AND/OR单选） -->
                <LinearLayout
                    android:id="@+id/ll_monster_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_close_black_24dp"
                            android:text="怪兽类型 ?"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#FFFFFF"
                                android:text="and"
                                android:textColor="#FFFFFF" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#FFFFFF"
                                android:checked="true"
                                android:text="or"
                                android:textColor="#FFFFFF" />
                        </RadioGroup>
                    </LinearLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="3">

                        <Button
                            android:id="@+id/btn_type_normal"
                            style="@style/CardFilterBtn"
                            android:text="通常" />

                        <Button
                            android:id="@+id/btn_type_effect"
                            style="@style/CardFilterBtn"
                            android:text="效果" />

                        <Button
                            android:id="@+id/btn_type_ritual"
                            style="@style/CardFilterBtn"
                            android:text="仪式" />

                        <Button
                            android:id="@+id/btn_type_fusion"
                            style="@style/CardFilterBtn"
                            android:text="融合" />

                        <Button
                            android:id="@+id/btn_type_synchro"
                            style="@style/CardFilterBtn"
                            android:text="同调" />

                        <Button
                            android:id="@+id/btn_type_xyz"
                            style="@style/CardFilterBtn"
                            android:text="超量" />

                        <Button
                            android:id="@+id/btn_type_link"
                            style="@style/CardFilterBtn"
                            android:text="连接" />

                        <Button
                            android:id="@+id/btn_type_toon"
                            style="@style/CardFilterBtn"
                            android:text="卡通" />

                        <Button
                            android:id="@+id/btn_type_spirit"
                            style="@style/CardFilterBtn"
                            android:text="灵魂" />

                        <Button
                            android:id="@+id/btn_type_union"
                            style="@style/CardFilterBtn"
                            android:text="联合" />

                        <Button
                            android:id="@+id/btn_type_gemini"
                            style="@style/CardFilterBtn"
                            android:text="二重" />

                        <Button
                            android:id="@+id/btn_type_tuner"
                            style="@style/CardFilterBtn"
                            android:text="调整" />

                        <Button
                            android:id="@+id/btn_type_flip"
                            style="@style/CardFilterBtn"
                            android:text="反转" />

                        <Button
                            android:id="@+id/btn_type_pendulum"
                            style="@style/CardFilterBtn"
                            android:text="灵摆" />

                        <Button
                            android:id="@+id/btn_type_specialSummon"
                            style="@style/CardFilterBtn"
                            android:text="特殊召唤" />

                        <Button
                            android:id="@+id/btn_type_token"
                            style="@style/CardFilterBtn"
                            android:text="衍生物" />
                    </GridLayout>
                </LinearLayout>
                <!-- 怪兽类型 排除项 -->
                <LinearLayout
                    android:id="@+id/ll_exclude_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_close_black_24dp"
                            android:text="排除类型 ?"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="7"
                            android:rowCount="3">

                            <Button
                                android:id="@+id/btn_exclude_type_normal"
                                style="@style/CardFilterBtn"
                                android:text="通常" />

                            <Button
                                android:id="@+id/btn_exclude_type_effect"
                                style="@style/CardFilterBtn"
                                android:text="效果" />

                            <Button
                                android:id="@+id/btn_exclude_type_ritual"
                                style="@style/CardFilterBtn"
                                android:text="仪式" />

                            <Button
                                android:id="@+id/btn_exclude_type_fusion"
                                style="@style/CardFilterBtn"
                                android:text="融合" />

                            <Button
                                android:id="@+id/btn_exclude_type_synchro"
                                style="@style/CardFilterBtn"
                                android:text="同调" />

                            <Button
                                android:id="@+id/btn_exclude_type_xyz"
                                style="@style/CardFilterBtn"
                                android:text="超量" />

                            <Button
                                android:id="@+id/btn_exclude_type_link"
                                style="@style/CardFilterBtn"
                                android:text="连接" />

                            <Button
                                android:id="@+id/btn_exclude_type_toon"
                                style="@style/CardFilterBtn"
                                android:text="卡通" />

                            <Button
                                android:id="@+id/btn_exclude_type_spirit"
                                style="@style/CardFilterBtn"
                                android:text="灵魂" />

                            <Button
                                android:id="@+id/btn_exclude_type_union"
                                style="@style/CardFilterBtn"
                                android:text="同盟" />

                            <Button
                                android:id="@+id/btn_exclude_type_gemini"
                                style="@style/CardFilterBtn"
                                android:text="二重" />

                            <Button
                                android:id="@+id/btn_exclude_type_tuner"
                                style="@style/CardFilterBtn"
                                android:text="调整" />

                            <Button
                                android:id="@+id/btn_exclude_type_flip"
                                style="@style/CardFilterBtn"
                                android:text="反转" />

                            <Button
                                android:id="@+id/btn_exclude_type_pendulum"
                                style="@style/CardFilterBtn"
                                android:text="灵摆" />

                            <Button
                                android:id="@+id/btn_exclude_type_specialSummon"
                                style="@style/CardFilterBtn"
                                android:text="特殊召唤" />

                            <Button
                                android:id="@+id/btn_exclude_type_token"
                                style="@style/CardFilterBtn"
                                android:text="衍生物" />
                        </GridLayout>
                    </LinearLayout>

                </LinearLayout>
                <!-- 等级/阶级/连接数 -->
                <LinearLayout
                    android:id="@+id/ll_level_rank_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_close_black_24dp"
                        android:text="等级/阶级/连接数 ?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="2"
                        android:spacing="8dp">

                        <ImageButton
                            android:id="@+id/btn_LRA_1"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_2"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_3"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_4"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_5"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_6"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_7"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_8"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_9"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_10"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_11"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_12"
                            style="@style/CardFilterBtn" />

                        <ImageButton
                            android:id="@+id/btn_LRA_13"
                            style="@style/CardFilterBtn" />
                    </GridLayout>
                </LinearLayout>

                <!-- 灵摆刻度 -->
                <LinearLayout
                    android:id="@+id/ll_pendulum_scale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_close_black_24dp"
                        android:text="灵摆刻度 ?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="2"
                        android:spacing="8dp">

                        <ImageButton
                            android:id="@+id/btn_Pscale_0"
                            style="@style/CardFilterBtn"
                            android:text="0" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_1"
                            style="@style/CardFilterBtn"
                            android:text="1" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_2"
                            style="@style/CardFilterBtn"
                            android:text="2" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_3"
                            style="@style/CardFilterBtn"
                            android:text="3" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_4"
                            style="@style/CardFilterBtn"
                            android:text="4" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_5"
                            style="@style/CardFilterBtn"
                            android:text="5" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_6"
                            style="@style/CardFilterBtn"
                            android:text="6" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_7"
                            style="@style/CardFilterBtn"
                            android:text="7" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_8"
                            style="@style/CardFilterBtn"
                            android:text="8" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_9"
                            style="@style/CardFilterBtn"
                            android:text="9" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_10"
                            style="@style/CardFilterBtn"
                            android:text="10" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_11"
                            style="@style/CardFilterBtn"
                            android:text="11" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_12"
                            style="@style/CardFilterBtn"
                            android:text="12" />

                        <ImageButton
                            android:id="@+id/btn_Pscale_13"
                            style="@style/CardFilterBtn"
                            android:text="13" />
                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_monster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/label_width_small"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/sp_type_monster"
                            style="@style/itemSpinnerStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/sp_type_monster2"
                            style="@style/itemSpinnerStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/label_width_small"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_linkmarker"
                            style="@style/itemSpinnerStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:text="@string/linkmarker"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_atk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hit_atk"
                                android:maxLines="1"
                                android:singleLine="true"
                                tools:text="100" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_def"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hit_def"
                                android:maxLines="1"
                                android:singleLine="true"
                                tools:text="100" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_word1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/hit_keyword1"
                    android:imeOptions="actionSearch"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/gold" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_width_small"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chk_multi_keyword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="@string/settings_key_words_split"
                    android:textSize="10sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_my_fav"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_radius_black_transparents"
                    android:text="@string/my_favorites"
                    android:textColor="@color/selector_text_color_white_gold"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_bg"
                    android:text="@string/reset" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_bg"
                    android:text="@string/search" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>